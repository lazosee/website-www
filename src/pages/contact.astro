---
import type { Meta } from "@/types/head";
import { titleTemplate } from "@/utils";
import { MainLayout } from "../layouts";

export const prerender = true;

// metadata
const title = titleTemplate('Contact')
/* TODO: Edit the following metadata */
const description = ""
const cover = ""
const metas: Meta[] = [
		{ name: "title", content: title },
		{ name: "description", content: description },
		{ name: "canonical", content: "https://www.lazaroosee.xyz/" },
		{ name: "type", content: "website" },
		{ name: "author", content: "Lazaro Osee" },
		{ name: "copyright", content: "Lazaro Osee" },
		{ name: "robots", content: "index, follow" },
		{ name: "image", content: cover },
		{ name: "og:title", content: title },
		{ name: "og:description", content: description },
		{ name: "og:image", content: cover },
		{ name: "og:url", content: "https://www.lazaroosee.xyz" },
		{ name: "twitter:card", content: "summary_large_image" },
		{ name: "twitter:title", content: title },
		{ name: "twitter:decsription", content: description },
		{ name: "twitter:image", content: cover },
	]
---

<MainLayout {title} {metas}>
    <section class="flex flex-col p-1 justify-center items-center md:items-start md:flex-row md:justify-evenly w-full h-auto content-center justify-items-center brightness-90 bg-linear-to-tr/oklch bg-gradient-to-r/oklch via-red-500/60 from-orange-500/60 to-sky-500/60 via-45%">
        <form 
            name="contact" 
            method="post"
            netlify-honeypot="bot-field" 
            data-netlify="true"
            class="block flex-1 max-w-md w-full m-2 p-4 pt-6 pb-12 mb-4 sm:w-4/5 sm:p-6 bg-white dark:bg-black rounded-md shadow-md md:px-8 border-1"
        >
            <h2 class="text-2xl capitalize font-lora my-6">share your feedback, or queries</h2>
            <p class="hidden">
                <label>
                Don’t fill this out if you’re human: <input name="bot-field" type="text" hidden />
                </label>
            </p>
            <fieldset class="block space-y-12">
                <legend class="text-lg font-semibold mb-4 capitalize">contact information</legend>
                <div class="mb-4">
                    <label for="fullname" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Name </label>
                    <input id="fullname" type="text" name="name" required aria-required="true" class="form-input rounded-md mt-1 p-2 block w-full border outline-none border-gray-400 dark:border-gray-600 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" />
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Email </label>
                    <input id="email" type="email" name="email" required aria-required="true" class="form-input rounded-md mt-1 p-2 block w-full border outline-none border-gray-400 dark:border-gray-600 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" />
                </div>
            </fieldset>
            <fieldset class="block space-y-12">
                <legend class="text-lg font-semibold mb-4 capitalize">message details</legend>
                <div class="mb-4">
                    <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Subject </label>
                    <input id="subject" type="text" name="subject" required aria-required="true" class="form-input rounded-md mt-1 p-2 block w-full border outline-none border-gray-400 dark:border-gray-600 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" />
                </div>
                <div class="mb-4">
                    <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Message </label>
                    <textarea id="message" name="message" required aria-required="true" class="form-input field-sizing-content min-h-20 rounded-md mt-1 p-2 block w-full border outline-none border-gray-400 dark:border-gray-600 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" />
                </div>
                <div class="mb-4 flex gap-4 items-start-safe">
                    <input id="consent" type="checkbox" name="consent" class="form-checkbox rounded-md block size-6" checked aria-checked="mixed" />
                    <label for="consent" class="inline-block text-[1rem] font-medium text-gray-700 dark:text-gray-200">
                        I understand and consent to the use of my data as outlined in the <a href="/data-processing-consent" target="_blank" rel="noopener noreferrer" class="underline underline-offset-1">data processing consent</a> to receive a response to my message.
                    </label>
                </div>
            </fieldset>
            <div class="block space-y-12">
                <button 
                    type="submit" 
                    class="w-full py-3 px-4 text-white font-semibold bg-cyan-700 rounded-md focus:outline-none focus:bg-cyan-800 hover:bg-cyan-800"
                >Send message</button>
            </div>
            <div class="block space-y-12 my-4">
                <small class="my-2 p-2 italic"> * We do not share your personal info whatsoever</small>
            </div>
        </form>
