---
import { Timeline, TimelineItem } from "@/components/tags";
import { getLatestPosts } from "@/data/collections";
import { about } from "@/data/me";
import type { Meta } from "@/types/head";
import { blog_url, capitalize, titleTemplate } from "@/utils";
import { Image } from "astro:assets";
import { TickSvg } from "../components";
import { MainLayout } from "../layouts";

export const prerender = true;

const latestPosts = await getLatestPosts()

const currentlyReading = "<em>\"Klara and the Sun\"</em> by Kazuo Ishiguro."
const currentlyLearning = "Advanced 3D rendering in Blender."

// metadata
const title = titleTemplate(capitalize(about.name), about.description)
/* TODO: Edit the following metadata */
const description = ""
const cover = ""
const metas: Meta[] = [
		{ name: "title", content: title },
		{ name: "description", content: description },
		{ name: "canonical", content: "https://www.lazaroosee.xyz/" },
		{ name: "type", content: "website" },
		{ name: "author", content: "Lazaro Osee" },
		{ name: "copyright", content: "Lazaro Osee" },
		{ name: "robots", content: "index, follow" },
		{ name: "image", content: cover },
		{ name: "og:title", content: title },
		{ name: "og:description", content: description },
		{ name: "og:image", content: cover },
		{ name: "og:url", content: "https://www.lazaroosee.xyz" },
		{ name: "twitter:card", content: "summary_large_image" },
		{ name: "twitter:title", content: title },
		{ name: "twitter:decsription", content: description },
		{ name: "twitter:image", content: cover },
	]
---

<MainLayout {title} {metas}>
    <main class="overflow-x-hidden">
		{/*  1. Hero section */}
		<section class="bg-white dark:bg-slate-950 py-16 md:py-24">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <!-- Right Side (Text) - Placed first for mobile stacking -->
                    <div class="text-center md:text-left">
                        <span class="text-sky-600 dark:text-sky-500 font-semibold uppercase tracking-wide">About Me</span>
                        <h1 class="mt-2 text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-white tracking-tight">Hi, I'm Lazaro Osee.</h1>
                        <p class="mt-6 text-xl text-slate-600 dark:text-white">
                            I am an architectural designer, software developer, and creative writer.
                        </p>
                        <p class="mt-4 text-lg text-slate-600 dark:text-white">
                            I build bridges between the digital and physical worlds, using code to solve spatial problems and art to tell human stories.
                        </p>
                        <!-- CTA Buttons -->
                        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                            <a href="/projects" class="inline-block px-8 py-3 rounded-lg bg-sky-600 text-white font-medium text-center shadow-lg hover:bg-sky-700 transition duration-300 transform hover:-translate-y-0.5">
                                View My Work
                            </a>
                            <a href="/contact" class="inline-block px-8 py-3 rounded-lg bg-slate-100 text-slate-800 font-medium text-center shadow-lg hover:bg-slate-200 transition duration-300 transform hover:-translate-y-0.5">
                                Get in Touch
                            </a>
                        </div>
                    </div>
                    <!-- Left Side (Visual) -->
                    <div class="flex justify-center">
                        <Image 
                            src="https://placehold.co/600x600/e0f2fe/0ea5e9?text=Lazaro+Osee" 
                            alt="A professional portrait of Lazaro Osee"
                            quality={100}
                            format="webp"
                            width={800}
                            height={800}
                            class="rounded-full w-80 h-80 md:w-96 md:h-96 lg:w-[450px] lg:h-[450px] object-cover shadow-2xl border-8 border-white"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- 2. Philosophy / Mission Section -->
        <section class="dark py-16 md:py-24 bg-sky-50 dark:bg-sky-950">
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h2 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl">My Philosophy</h2>
                <p class="mt-6 text-xl md:text-2xl text-slate-700 dark:text-white leading-relaxed">
                    "I believe architecture teaches us <strong class="text-sky-700 dark:text-sky-200">structure</strong>, technology gives us <strong class="text-sky-700 dark:text-sky-200">scale</strong>, and art provides the <strong class="text-sky-700 dark:text-sky-200">soul</strong>. My work lives at the intersection of these three disciplines, driven to create solutions that are not only functional and efficient but also beautiful and human-centric."
                </p>
            </div>
        </section>

        <!-- 3. The Three Pillars Section -->
        <section class="py-16 md:py-24 bg-white dark:bg-slate-950">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl">What I Do</h2>
                    <p class="mt-4 text-lg text-slate-600 dark:text-white">
                        A look at my three core disciplines.
                    </p>
                </div>
                
                <!-- 3-Column Grid -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <!-- Pillar 1: Architect -->
                    <div class="bg-slate-50 dark:bg-slate-900 p-8 rounded-xl shadow-lg border border-slate-200 dark:border-slate-800 transform transition duration-500 hover:scale-[1.03] hover:shadow-xl">
                        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-sky-100 dark:bg-sky-900 text-sky-600 dark:text-white mb-4">
                            <!-- SVG Icon: Compass -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon></svg>
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-3">The Architect</h3>
                        <p class="text-slate-600 dark:text-white mb-4">
                            As an architecture student at TUK, I design human-centered spaces, create detailed 3D models, and explore sustainable solutions for our urban environments.
                        </p>
                        <a href="/gallery/architecture" class="font-medium text-sky-600 dark:text-sky-300 hover:text-sky-800 dark:hover:text-sky-400 transition duration-300">See Architectural Work &rarr;</a>
                    </div>
                    
                    <!-- Pillar 2: Developer -->
                    <div class="bg-slate-50 dark:bg-slate-900 p-8 rounded-xl shadow-lg border border-slate-200 dark:border-slate-800 transform transition duration-500 hover:scale-[1.03] hover:shadow-xl">
                        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-sky-100 dark:bg-sky-900 text-sky-600 dark:text-white mb-4">
                            <!-- SVG Icon: Code -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-3">The Developer</h3>
                        <p class="text-slate-600 dark:text-white mb-4">
                            As a self-taught developer, I build full-stack web applications, mobile apps, and AI-powered tools to automate tasks and bring creative ideas to life.
                        </p>
                        <a href="https://github.com/lazosee" target="_blank" class="font-medium text-sky-600 dark:text-sky-300 hover:text-sky-800 dark:hover:text-sky-400 transition duration-300">See Code on GitHub &rarr;</a>
                    </div>
                    
                    <!-- Pillar 3: Artist & Writer -->
                    <div class="bg-slate-50 dark:bg-slate-900 p-8 rounded-xl shadow-lg border border-slate-200 dark:border-slate-800 transform transition duration-500 hover:scale-[1.03] hover:shadow-xl">
                        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-sky-100 dark:bg-sky-900 text-sky-600 dark:text-white mb-4">
                            <!-- SVG Icon: Feather -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"></path><line x1="16" y1="8" x2="2" y2="22"></line><line x1="17.5" y1="15" x2="9" y2="15"></line></svg>
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-3">The Artist & Writer</h3>
                        <p class="text-slate-600 dark:text-white mb-4">
                            As a creative, I explore expression through drawing, painting, and modeling. I also share my thoughts through poetry, fiction, and non-fiction on my blog.
                        </p>
                        <a href="/posts" target="_blank" class="font-medium text-sky-600 dark:text-sky-300 hover:text-sky-800 dark:hover:text-sky-400 transition duration-300">Read My Blog &rarr;</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4. The featured posts section -->
        <section class="py-16 md:py-24 bg-white dark:bg-slate-950">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 content-center justify-items-center">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl">My Latest Posts</h2>
                    <p class="mt-4 text-lg text-slate-600 dark:text-white">
                        From architecture to art and writing through software development and design.
                    </p>
                </div>
                
                <!-- 3-Column Grid -->
                <div class="block content-center justify-items-center">
                    { (latestPosts && latestPosts.length > 0) && latestPosts.map((post) => (
                        <article class="max-w-[80ch] bg-slate-50 dark:bg-slate-900 mb-12 p-8 rounded-xl shadow-lg border border-slate-200 dark:border-slate-800 transform transition duration-500 hover:scale-[1.03] hover:shadow-xl">
                            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-sky-100 dark:bg-sky-900 text-sky-600 dark:text-white mb-4">
                                <svg 
                                    xmlns="http://www.w3.org/2000/svg" 
                                    height="24px" 
                                    viewBox="0 -960 960 960" 
                                    width="24px" 
                                    fill="currentColor"
                                >
                                    <path d="M760-120H200q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h560q33 0 56.5 23.5T840-760v560q0 33-23.5 56.5T760-120Zm-40-160H240v60h480v-60Zm-480-60h480v-60H240v60Zm0-140h480v-240H240v240Zm0 200v60-60Zm0-60v-60 60Zm0-140v-240 240Zm0 80v-80 80Zm0 120v-60 60Z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold! text-slate-900 dark:text-slate-100 mb-3">{post.title}</h3>
                            <p class="text-slate-600 dark:text-white mb-4">
                                {post.snippet}
                            </p>
                            <a href={blog_url(post.slug, post.published_at)} class="font-medium text-sky-600 dark:text-sky-300 hover:text-sky-800 dark:hover:text-sky-400 transition duration-300 capitalize">
                                Read More &rarr;
                            </a>
                        </article>
                    )) }
                </div>
                <div class="block content-center justify-items-center w-full max-w-[80ch]">
                    <a href="/posts" class="block content-center justify-items-center text-center w-full h-full bg-slate-50 dark:bg-slate-900 p-8 rounded-xl shadow-lg border border-slate-200 dark:border-slate-800 capitalize text-xl font-semibold transform transition duration-500 hover:scale-[1.03] hover:shadow-xl">View all Posts</a>
                </div>
            </div>
        </section>

        <!-- 5. My Journey Section -->
        <section class="py-16 md:py-24 bg-slate-50 dark:bg-slate-900">
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl">My Journey</h2>
                    <p class="mt-4 text-lg text-slate-600 dark:text-white">
                        A brief timeline of how I got here.
                    </p>
                </div>
                
                <!-- Vertical Timeline -->
                <Timeline>
                    <!-- Timeline Item 1 -->
                    <TimelineItem 
                        period="2022" 
                        event="Began Architectural Studies" 
                        description="Enrolled at the Technical University of Kenya (TUK) to pursue my passion for design and the built environment." 
                    />
                    <!-- Timeline Item 2 -->
                    <TimelineItem 
                        period="2023" 
                        event={`"Hello World!"`} 
                        description="Wrote my first line of code and discovered a powerful new medium for creation and problem-solving." 
                    />
                    <!-- Timeline Item 3 -->
                    <TimelineItem 
                        period="2024" 
                        event="Exploring Web, AI & Mobile" 
                        description="Began diving deeper into Web development, AI, machine learning models, and cross-platform mobile app development." 
                    />
                    <!-- Timeline Item 4 -->
                    <TimelineItem 
                        period="2025" 
                        event="Launched Personal Blog" 
                        description={`Started <a href="https://lazaroosee.xyz" target="_blank" class="text-sky-600 underline hover:text-sky-800">lazaroosee.xyz</a> to combine my love for writing and web development, sharing insights on tech, art, and life.`} 
                    />
                    <TimelineItem 
                        period="present" 
                        event="Balancing Worlds" 
                        description="Continuing my architectural degree while actively taking on freelance development projects and creative commissions." 
                    />
                </Timeline>
            </div>
        </section>

        <!-- 6. Beyond the "Work" Section -->
        <section class="py-16 md:py-24 bg-white dark:bg-sky-950 dark:text-white">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <!-- Left Side (Visual) -->
                    <div class="flex justify-center">
                         <img src="https://placehold.co/600x720/0f172a/94a3b8?text=Candid+Shot" 
                             alt="A candid photo of Lazaro painting, modeling, or reading"
                             class="rounded-xl w-full max-w-md h-[480px] object-cover shadow-xl">
                    </div>
                    
                    <!-- Right Side (Text) -->
                    <div class="text-center md:text-left">
                        <h2 class="text-3xl font-extrabold text-slate-900 dark:text-sky-100 sm:text-4xl">When I'm Not at the Computer...</h2>
                        <p class="mt-6 text-lg text-slate-600 dark:text-white">
                            ...or the drafting table, you can usually find me exploring other creative outlets, diving into new topics, or simply enjoying the city.
                        </p>
                        <!-- Quick Facts / Hobbies -->
                        <ul class="mt-8 space-y-4 text-lg text-slate-700 dark:text-sky-100">
                            <li class="flex items-start">
                                <TickSvg />
                                Working on a new painting or physical model.
                            </li>
                            <li class="flex items-start">
                                <TickSvg />
                                Writing poetry and short fiction.
                            </li>
                            <li class="flex items-start">
                                <TickSvg />
                                Exploring Nairobi's art galleries and architecture.
                            </li>
                            <!-- TODO: Set the `currentlyReading` and `currenntlyLearning` through a server island for dynamism -->
                            <li class="flex items-start">
                                <TickSvg />
                                <strong>Currently Reading: </strong> <span set:html={currentlyReading}></span>
                            </li>
                             <li class="flex items-start">
                                <TickSvg />
                                <strong>Currently Learning: </strong> {currentlyLearning}
                            </li>
                            <!-- TODO: End of todo -->
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- 7. Call to Action (CTA) Section -->
        <section id="contact-link" class="bg-slate-800 dark:bg-slate-900 text-white py-16 md:py-24">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h2 class="text-3xl font-extrabold sm:text-4xl">
                    Let's Create Something Together
                </h2>
                <p class="mt-6 text-xl text-slate-300">
                    Whether you have a project idea, a technical challenge, or just want to talk about art, architecture, and AI, I'd love to hear from you.
                </p>
                <div class="mt-10">
                    <a href="/contact" class="inline-block px-10 py-4 rounded-lg bg-sky-600 text-white font-medium text-lg shadow-lg hover:bg-sky-700 transition duration-300 transform hover:-translate-y-0.5">
                        Send Me a Message
                    </a>
                </div>
            </div>
        </section>
	</main>
</MainLayout>
