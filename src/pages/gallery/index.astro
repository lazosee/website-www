---
import { MainLayout } from "@/layouts";
import type { Meta } from "@/types/head";
import { titleTemplate } from "@/utils";

export const prerender = true;

// metadata
const title = titleTemplate("Gallery")
/* TODO: Edit the following metadata */
const description = ""
const cover = ""
const metas: Meta[] = [
		{ name: "title", content: title },
		{ name: "description", content: description },
		{ name: "canonical", content: "https://www.lazaroosee.xyz/" },
		{ name: "type", content: "website" },
		{ name: "author", content: "Lazaro Osee" },
		{ name: "copyright", content: "Lazaro Osee" },
		{ name: "robots", content: "index, follow" },
		{ name: "image", content: cover },
		{ name: "og:title", content: title },
		{ name: "og:description", content: description },
		{ name: "og:image", content: cover },
		{ name: "og:url", content: "https://www.lazaroosee.xyz" },
		{ name: "twitter:card", content: "summary_large_image" },
		{ name: "twitter:title", content: title },
		{ name: "twitter:decsription", content: description },
		{ name: "twitter:image", content: cover },
	]
---

<MainLayout {title} {metas}>
    <!-- Main Content -->
    <main class="overflow-x-hidden">

        <!-- 1. Gallery Header -->
        <section class="bg-white py-16 md:py-24 border-b border-slate-200">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <span class="text-sky-600 font-semibold uppercase tracking-wide">My Work</span>
                <h1 class="mt-2 text-4xl md:text-5xl font-extrabold text-slate-900 tracking-tight">Project Gallery</h1>
                <p class="mt-6 text-xl text-slate-600 max-w-3xl mx-auto">
                    A curated collection of my projects across architecture, software development, and creative arts.
                </p>
            </div>
        </section>

        <!-- 2. Filter & Projects Section -->
        <section class="py-16 md:py-24">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                
                <!-- Filter Buttons -->
                <div id="filter-nav" class="flex flex-wrap justify-center gap-4 mb-12">
                    <button class="filter-btn active" data-filter="all">All</button>
                    <button class="filter-btn" data-filter="architecture">Architecture</button>
                    <button class="filter-btn" data-filter="software">Software</button>
                    <button class="filter-btn" data-filter="art-writing">Art & Writing</button>
                </div>
                
                <!-- Project Grid -->
                <div id="project-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    
                    <!-- Project 1: Architecture -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="architecture">
                        <img src="https://placehold.co/600x400/0ea5e9/ffffff?text=Sustainable+Housing" alt="Sustainable Urban Housing Project" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-sky-100 text-sky-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Architecture</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">Sustainable Urban Housing</h3>
                            <p class="text-slate-600 mb-4">A conceptual design for high-density, low-impact housing in Nairobi.</p>
                            <a href="#" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">View Details &rarr;</a>
                        </div>
                    </div>
                    
                    <!-- Project 2: Software -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="software">
                        <img src="https://placehold.co/600x400/1e293b/ffffff?text=AI+Poetry+App" alt="AI Poetry Generator" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-slate-100 text-slate-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Software / AI</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">AI Poetry Generator</h3>
                            <p class="text-slate-600 mb-4">A web app using generative AI to create poetry in various styles.</p>
                            <a href="#" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">Live Demo &rarr;</a>
                        </div>
                    </div>
                    
                    <!-- Project 3: Art -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="art-writing">
                        <img src="https://placehold.co/600x400/be123c/ffffff?text=Nairobi+Sketches" alt="Nairobi Sketch Series" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-rose-100 text-rose-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Art & Writing</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">Nairobi Sketch Series</h3>
                            <p class="text-slate-600 mb-4">A collection of ink and watercolor sketches of Nairobi's iconic architecture.</p>
                            <a href="#" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">View Gallery &rarr;</a>
                        </div>
                    </div>
                    
                    <!-- Project 4: Architecture -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="architecture">
                        <img src="https://placehold.co/600x400/0ea5e9/ffffff?text=Kinetic+Facade" alt="Kinetic Facade Study" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-sky-100 text-sky-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Architecture / 3D Model</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">Kinetic Facade Study</h3>
                            <p class="text-slate-600 mb-4">3D modeling and simulation of a responsive facade system for climate control.</p>
                            <a href="#" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">View Details &rarr;</a>
                        </div>
                    </div>
                    
                    <!-- Project 5: Software -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="software">
                        <img src="https://placehold.co/600x400/1e293b/ffffff?text=Blog+Engine" alt="Personal Blog Engine" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-slate-100 text-slate-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Software</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">Personal Blog Engine</h3>
                            <p class="text-slate-600 mb-4">The custom-built engine that powers my personal blog, built with Go & Markdown.</p>
                            <a href="https://github.com/lazaroosee" target="_blank" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">View on GitHub &rarr;</a>
                        </div>
                    </div>
                    
                    <!-- Project 6: Art -->
                    <div class="project-card bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-[1.03] hover:shadow-xl border border-slate-200" data-category="art-writing">
                        <img src="https://placehold.co/600x400/be123c/ffffff?text=Poetry+Chapbook" alt="Poetry Chapbook" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <span class="inline-block bg-rose-100 text-rose-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-3">Art & Writing</span>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">"Digital Echoes"</h3>
                            <p class="text-slate-600 mb-4">A self-published digital chapbook of poems exploring tech and humanity.</p>
                            <a href="https://lazaroosee.xyz" target="_blank" class="font-medium text-sky-600 hover:text-sky-800 transition duration-300">Read on Blog &rarr;</a>
                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main>
</MainLayout>
