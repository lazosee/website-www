---
import { TITLE } from "@/data/nav";
import "@/styles/global.css";
import "@/styles/starwind.css";
import type { Meta, Title } from "@/types/head";
import { MainFooter, MainHeader } from "../components";

type Props = {
    title: Title;
    metas?: Meta[]
}

const { title, metas } = Astro.props;
---

<!doctype html>
<html lang="en" class="scheme-light-dark dark scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>
            {typeof title == "string" ? title : title()}
        </title>
        {metas && metas.map((meta) => (
            <meta name={meta.name} content={meta.content} />
        ))}
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link
			rel="alternate"
			type="application/rss+xml"
			title={TITLE}
			href={new URL("rss.xml", Astro.site)}
		/>
	</head>
	<body class="antialiased w-full h-full min-h-screen p-0 m-0 text-lg font-roboto text-black dark:text-white bg-white dark:bg-slate-950 overflow-y-auto">
        <MainHeader />
		<slot />
		<MainFooter />
	</body>
</html>


<script is:inline>
	// Optional: Save user preference to local storage
	if (localStorage.getItem("theme") === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
		document.documentElement.classList.add('dark');
	} else {
		document.documentElement.classList.remove('dark');
	}

	function toggleTheme() {
		if (document.documentElement.classList.contains('dark')) {
			document.documentElement.classList.remove('dark');
			localStorage.setItem("theme", 'light');
		} else {
			document.documentElement.classList.add('dark');
			localStorage.setItem("theme", 'dark');
		}

		//
		document.querySelectorAll("[data-theme]").forEach((el) => {
			el.textContent = document.documentElement.classList.contains('dark') ? 'light_mode' : 'dark_mode';
		})
	}
</script>
